<h1><%= @event.title %></h1><br>
<h2><%= "By #{User.find(@event.creator_id).username.capitalize}"%></h2><br>

<div class='show-event'><%= @event.description %></div>

<%= link_to 'Attend Event!', attend_event_path %>

<h3>Event Attendees</h3>
<% @event.attendees.each do |attendee| %>
  <p><%= attendee.username %><p>
<% end %>