<h1>Sign In</h1>

<div class='forms'>
  <%= form_for @user, url: {action: "create"} do |f| %>
    <%= f.label :username, 'username' %><br>
    <div><%= f.text_field :username, placeholder: "Your Username"%><br></div>
    <%= f.submit "Submit" %>
  <% end %>
</div>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from logging in:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>